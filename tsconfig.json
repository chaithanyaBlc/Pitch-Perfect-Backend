{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "ESNext"
    ],
    "strict": true,
    "target": "es6",
    "module": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolvePackageJsonImports": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ],
  "include": [
    "src/**/*",
  ]
}